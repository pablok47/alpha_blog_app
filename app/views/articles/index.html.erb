<h1 align="center">Listing all articles</h1>

<% @articles.each do |item| %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="article-title">
        <%= link_to item.title, article_path(item) %>
      </div>
      <div class="article-body">
        <%= truncate(item.description, length: 50) %>
      </div>
      <div class="article-actions">
        <%= link_to "Edit this Article", edit_article_path(item), class: "btn btn-xs btn-primary" %> 
        <%= link_to "Delete this Article", article_path(item), method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-xs btn-danger" %> 
      </div>
    </div>
  </div>
</div>
  
<% end  %>
  

